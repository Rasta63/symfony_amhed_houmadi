{% extends 'base.html.twig' %}

{% block title %}Pojet Hub
{% endblock %}

{% block body %}
	<div class="container">
    <h1>Projects</h1>
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Nom project</th>
					<th scope="col">Statut</th>
					<th scope="col">Taches</th>
					<th scope="col">Ajout√© le</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for project in projects %}
					<tr>
						<td>{{ project.name }}</td>
						<td>{{ project.status }}</td>
						<td>{{ project.tasks | length }}</td>
						<td>{{ project.startedAt | date('d/m/Y') }}</td>
						<td>
							<a href="{{ path('project_detail',{'id': project.id }) }}">Gerer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
